{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": false,
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node16",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "dist",
		"paths": {
			"@codestream/protocols/agent": ["codestream-common/agent-protocol"],
			"@codestream/protocols/api": ["codestream-common/api-protocol"],
			"@codestream/protocols/webview": ["protocols/webview/webview.protocol.ts"]
		},
		"preserveSymlinks": true,
		"rootDir": "../",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"useUnknownInCatchVariables": false
	},
	"exclude": ["node_modules", "src/webviews/app", ".vscode-test"],
	"include": ["src/**/*.ts", "esbuild.ts"]
}
